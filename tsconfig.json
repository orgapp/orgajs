{
	"compilerOptions": {
		"checkJs": true,
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"exactOptionalPropertyTypes": true,
		"jsx": "preserve",
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext"
	},
	"exclude": [
		"**/coverage/",
		"**/node_modules/",
		"**/tests/",
		"**/dist/",
		"./packages/reorg-parse/",
		"./packages/reorg/",
		"./packages/loader/"
	],
	"include": ["packages/**/*.js"]
}
