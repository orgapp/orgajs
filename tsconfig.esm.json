{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "module": "ES2020",
    "declaration": true,
    "moduleResolution": "Node",
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["ES2020"]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**",
    "tests/**"
  ]
}
