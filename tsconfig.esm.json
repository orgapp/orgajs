{
	"compilerOptions": {
		"target": "ESNEXT",
		"module": "ESNEXT",
		"declaration": true,
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowJs": true,
		"lib": ["ESNEXT", "DOM"],
		"checkJs": true
	},
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"**/*.test.ts",
		"**/__tests__/**",
		"tests/**"
	]
}
