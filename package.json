		"test": "xo packages/**/*.js --fix && pnpm -r --filter './packages/*' --if-present run test",
		"format": "prettier --write .",
		"changeset": "changeset",
		"ci:version": "changeset version",
		"ci:publish": "pnpm build && changeset publish",
